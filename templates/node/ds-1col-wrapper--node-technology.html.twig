{#
/**
 * @file
 * Display Suite 1 column template.
 *
 * Available variables:
 * - ds_content_wrapper: wrapper around content
 * - attributes: content region attributes
 * - ds_content: content region
 */
#}

<{{ outer_wrapper }}{{ attributes.addClass('ds-1col', 'clearfix') }}>

  {{ title_suffix.contextual_links }}

  <{{ ds_content_wrapper }}{{ ds_content_attributes }}>
  <div class="row">
    <div class="col-xs-12 col-md-9 col-lg-9">
      {{ ds_content.field_image_glimpse }}
    </div>
    <div class="col-xs-12 col-md-3 col-lg-3">
        <div class="row">
          <div class="col-sm-12">
            {{ ds_content.field_category_glimpse }}
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
             {{ ds_content.field_faculty_name_ref }}
          </div>
        </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-9 col-lg-9">
        {{ ds_content.body }}
    </div>
  </div>
  </{{ ds_content_wrapper }}>
</{{ outer_wrapper }}>

